---
layout: base.njk
---
<article class="max-w-4xl mx-auto px-4 py-8">
  <header class="mb-8">
    <h1 class="text-3xl font-bold text-primary-text mb-2">{{ title }}</h1>
    <div class="flex flex-wrap gap-2 text-sm text-secondary-text">
      <time datetime="{{ date | htmlDateString }}">{{ date | htmlDateString }}</time>
      {% if categories %}
        <span class="mx-2">â€¢</span>
        <div class="flex gap-2">
          {% for category in categories %}
            <span class="text-accent">{{ category }}</span>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </header>

  <div class="prose max-w-none text-primary-text">
    {{ content | replace("<html><body>", "") | replace("</body></html>", "") | safe }}
  </div>
</article>